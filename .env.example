# Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shoreline_dev

# Auth
NEXTAUTH_SECRET=supersecretkey
AUTH_GOOGLE_ID=<your-google-client-id>
AUTH_GOOGLE_SECRET=<your-google-client-secret>
# Comma-separated list of admin emails (only these can sign in). Single email is fine.
AUTHORIZED_ADMIN_EMAIL=myemail@gmail.com

# Cloudinary
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Local Next.js URL
NEXTAUTH_URL=http://localhost:3000

# Cloudflare Turnstile (bot protection)
# Create a widget at https://dash.cloudflare.com/?to=/:account/turnstile
# Testing keys: https://developers.cloudflare.com/turnstile/troubleshooting/testing/
NEXT_PUBLIC_TURNSTILE_SITEKEY=
TURNSTILE_SECRET_KEY=

# Mailgun (contact form email) â€” https://www.mailgun.com/
# MAILGUN_HOST=https://api.eu.mailgun.net   # uncomment for EU region
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM="Shoreline Contact Form <noreply@yourdomain.com>"
MAILGUN_TO=

# Vercel Cron (optional, for /api/cloudinary-cleanup). At least 16 chars.
# Set in Vercel project env vars; Vercel sends it as Authorization: Bearer <CRON_SECRET>.
# CRON_SECRET=